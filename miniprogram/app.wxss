@import "./utils/common.wxss";

page {
  background: #f8f9fa;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
button {
  font-size: 28rpx;
  background: linear-gradient(45deg, #2196F3, #00BCD4);
  color: #fff;
  border: none;
  padding: 0 30rpx;
}

button::after {
  border: none;
}

button[size="mini"] {
  font-size: 24rpx;
  padding: 0 20rpx;
}

/* 输入框样式 */
input {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

/* 加载提示 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

/* 空状态提示 */
.empty {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
} 
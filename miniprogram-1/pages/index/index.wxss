.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
}

.welcome {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.role {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  display: block;
}

.logout {
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.title-bar {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.group-list {
  margin-top: 20rpx;
}

.group-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.group-info {
  flex: 1;
}

.group-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.group-progress {
  font-size: 28rpx;
  color: #666;
}

.group-arrow {
  color: #999;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
} 
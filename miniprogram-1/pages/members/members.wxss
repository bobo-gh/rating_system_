.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.member-list {
  margin-top: 20rpx;
}

.member-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.member-detail {
  font-size: 28rpx;
  color: #666;
}

.member-detail text {
  margin-right: 20rpx;
}

.member-score {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.member-score.scored {
  color: #07c160;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-body .member-info {
  margin-bottom: 30rpx;
}

.modal-body .member-info text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.score-input {
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
}

.score-input input {
  height: 80rpx;
  font-size: 32rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.modal-footer button {
  flex: 1;
  margin: 0 10rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #07c160;
  color: #fff;
} 
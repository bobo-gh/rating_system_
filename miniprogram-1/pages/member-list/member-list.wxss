/* pages/member-list/member-list.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.search-box {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.search-box input {
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.member-list {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  flex: 1;
  margin-right: 20rpx;
}

.member-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.member-number {
  font-size: 28rpx;
  color: #666;
}

.score-input {
  width: 160rpx;
}

.score-input input {
  width: 100%;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
}

.score-input input[disabled] {
  background: #f5f5f5;
  color: #2d8cf0;
  border-color: transparent;
}

.score-input input:focus {
  border-color: #2d8cf0;
}

.progress-section {
  background: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 10rpx;
  background: #eee;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-inner {
  height: 100%;
  background: #2d8cf0;
  transition: width 0.3s;
}

.progress-info {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.submit-section {
  background: #fff;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
}

.submit-all-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2d8cf0;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border: none;
}

.submit-all-btn.disabled,
.submit-all-btn[disabled] {
  background: #ccc !important;
  color: #fff !important;
  pointer-events: none;
}

.submit-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #666;
}

.empty {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999;
}
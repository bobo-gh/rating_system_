.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.logout-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  border: none;
}

.group-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.group-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.group-item:last-child {
  border-bottom: none;
}

.group-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
}

.group-name {
  font-size: 32rpx;
  color: #333;
}

.group-status {
  font-size: 28rpx;
  color: #666;
}

.group-arrow {
  color: #999;
  font-size: 32rpx;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #666;
}

.empty {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999;
} 
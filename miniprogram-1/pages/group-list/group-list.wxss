.container {
  padding: 30rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.group-item {
  background: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}

.group-item .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.group-item .progress {
  font-size: 28rpx;
  color: #666;
}

.progress-bar {
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  margin: 16rpx 0;
  overflow: hidden;
}

.progress-bar-inner {
  height: 100%;
  background: linear-gradient(45deg, #2196F3, #00BCD4);
  transition: width 0.3s ease;
} 
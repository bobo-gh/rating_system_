<view class="container">
  <view class="login-box">
    <view class="title">评委登录</view>
    
    <view class="input-group">
      <input 
        type="text"
        placeholder="请输入用户名"
        value="{{username}}"
        bindinput="onUsernameInput"
      />
    </view>

    <view class="input-group">
      <input
        type="password" 
        placeholder="请输入密码"
        value="{{password}}"
        bindinput="onPasswordInput"
      />
    </view>

    <button 
      class="login-btn"
      bindtap="onLogin"
      loading="{{loading}}"
    >登录</button>
  </view>
</view> 
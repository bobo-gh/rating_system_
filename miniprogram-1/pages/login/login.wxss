.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  margin-top: 100rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
}

.input-group {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-group input {
  height: 80rpx;
  font-size: 32rpx;
}

.login-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  text-align: center;
} 